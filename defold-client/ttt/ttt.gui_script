                status = status .. "üéÆ Total Games: 0\n"
                status = status .. "üí° No games played yet!\n\n"
                status = status .. "üöÄ Play your first game to start\n"
                status = status .. "    building your statistics!\n"
            end
            
            status = status .. "\nüéØ CONTROLS:\n"
